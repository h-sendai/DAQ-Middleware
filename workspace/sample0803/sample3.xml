<?xml version="1.0"?>
<!-- DON'T REMOVE THE ABOVE LINE.                                     -->
<!-- DON'T PUT ANY LINES ABOVE THE 1ST LINE.                          -->
<!-- Sample config.xml to run SampleReader and SampleMonitor.         -->
<!-- Please rewrite execPath (2 places), confFile (2 places) suitable -->
<!-- for your directory structure.                                    -->
<!-- run.py will create rtc.conf in /tmp/daqmw/rtc.conf               -->
<!-- If you use run.py, set confFile as /tmp/daqmw/rtc.conf           -->
<configInfo>
    <daqOperator>
        <hostAddr>127.0.0.1</hostAddr>
    </daqOperator>
    <daqGroups>
        <daqGroup gid="group0">
            <components>
                <component cid="Reader0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>Reader0.rtc</instName>
                    <execPath>/home/netuser/MyDaq/sample0803/Reader/ReaderComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>5</startOrd>
                    <inPorts>
                    </inPorts>
                    <outPorts>
                        <outPort>reader_out</outPort>
                    </outPorts>
                    <params>
                        <param pid="srcAddr">127.0.0.1</param>
                        <param pid="srcPort">2220</param>
                    </params>
                </component>
                <component cid="Reader20">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>Reader20.rtc</instName>
                    <execPath>/home/netuser/MyDaq/sample0803/Reader2/Reader2Comp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>4</startOrd>
                    <inPorts>
                    </inPorts>
                    <outPorts>
                        <outPort>reader_out2</outPort>
                    </outPorts>
                    <params>
                        <param pid="srcAddr">127.0.0.1</param>
                        <param pid="srcPort">2221</param>
                    </params>
                </component>
                <component cid="Reader30">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>Reader30.rtc</instName>
                    <execPath>/home/netuser/MyDaq/sample0803/Reader3/Reader3Comp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>3</startOrd>
                    <inPorts>
                    </inPorts>
                    <outPorts>
                        <outPort>reader_out3</outPort>
                    </outPorts>
                    <params>
                        <param pid="srcAddr">127.0.0.1</param>
                        <param pid="srcPort">2222</param>
                    </params>
                </component>
                <component cid="Merger0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>Merger0.rtc</instName>
                    <execPath>/home/netuser/MyDaq/sample0803/Merger/MergerComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>2</startOrd>
                    <inPorts>
                        <inPort from="Reader0:reader_out" >collector_in0</inPort>
                        <inPort from="Reader20:reader_out2">collector_in1</inPort>
                        <inPort from="Reader30:reader_out3">collector_in2</inPort>
                    </inPorts>
                    <outPorts>
                        <outPort>e16merger_out</outPort>
                    </outPorts>
                    <params>
                        <param pid="separate_flag">0</param>
                    </params>
                </component>
                <component cid="DAQLogger0">
                    <hostAddr>127.0.0.1</hostAddr>
                    <hostPort>50000</hostPort>
                    <instName>DAQLogger0.rtc</instName>
                    <execPath>/home/netuser/MyDaq/sample0803/Logger/DAQLoggerComp</execPath>
                    <confFile>/tmp/daqmw/rtc.conf</confFile>
                    <startOrd>1</startOrd>
                    <inPorts>
                        <inPort from="Merger0:e16merger_out">logger_in</inPort>
                    </inPorts>
                    <outPorts>
                    </outPorts>
                    <params>
                       <param pid="dirName">/tmp</param>
                       <param pid="isLogging">yes</param>
                       <param pid="maxFileSizeInMegaByte">1024</param>
                    </params>
                </component>
            </components>
        </daqGroup>
    </daqGroups>
</configInfo>
